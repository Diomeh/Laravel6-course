body
	background-color: #f6f6f6
	font-size 14px
	font-family: 'Roboto', sans-serif;
	
h1, h2, h3, h4, h5, ul, body, html
	padding 0px
	margin 0px
	
.wrapper
	min-height 100vh
	overflow hidden
	.col1
		float left
		position relative
		z-index 999
		width 17%
	.col2
		float left
		width 83%
		
.sidebar
	background-color: #FFF
	min-height 100vh
	.section-top
		background-color: #780348
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, .15)
		color #fff
	.logo
		display block
		margin 0px auto
		padding-top 24px
		width 60%
	.user
		color #fff !important
		padding 16px	
		a
			font-size 1.1em
		.badge-primary
			background-color: #AA2F77
			transition 0.5s		
		.badge-primary:focus, .badge-primary:hover 
			background-color: #390022
	.main
		display block
		margin-top 10px
		ul
			list-style-type none
			li
				margin-bottom 10px
				transition 0.5s
				a
					color #780348
					display block
					font-size 1.1em
					padding 12px 16px
					text-decoration none
					i
						margin-right 10px
				&:hover
					background-color #780348
					box-shadow 0 0.5rem 1rem rgba(0, 0, 0, .15)
					a
						color white !important
						
.navbar
	background-color: #780348
	a
		color white !important
		transition 0.5s
		&:hover
			background-color: #390022
			
.page
	padding 16px 0px
	.breadcrumb
		background-color: #FFF
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, .10) !important
	.breadcrumb-item
		a
			&:hover
				text-decoration none !important		
	.panel
		background-color: #fff
		border-radius 6px
		border-bottom 2px solid #780348
		width 100% 
		.header
			border-bottom 1px solid #e8e8e8
			h2.title 
				display inline-block
				color #19213d
				font-size 1.1em
				padding 12px 16px
		.inside
			padding 16px

.btn-primary
	background-color: #780348
	border-color: #780348
	transition 0.5s
	&:hover, &:focus
		background-color: #AA2F77
		border-color: #AA2F77
