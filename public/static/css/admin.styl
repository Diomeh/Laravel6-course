primary-color = #780348
primary-color-dark = #390022
primary-color-light = #AA2F77

body
	background-color: #f6f6f6
	font-size 14px
	font-family: 'Roboto', sans-serif;
	
h1, h2, h3, h4, h5, ul, body, html
	padding 0px
	margin 0px
	
.mtop16
	margin-top 16px
	
.wrapper
	min-height 100vh
	overflow hidden
	.col1
		float left
		position relative
		z-index 999
		width 17%
	.col2
		float left
		width 83%
		
.sidebar
	background-color: #FFF
	min-height 100vh
	.section-top
		background-color: primary-color
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, .15)
		color #fff
	.logo
		display block
		margin 0px auto
		padding-top 24px
		width 60%
	.user
		color #fff !important
		padding 16px	
		a
			font-size 1.1em
		.badge-primary
			background-color: primary-color-light
			transition 0.5s		
			&:focus, &:hover 
				background-color: primary-color-dark
	.main
		display block
		margin-top 10px
		ul
			list-style-type none
			li
				margin-bottom 10px
				transition 0.5s
				a
					color primary-color
					display block
					font-size 1.1em
					padding 12px 16px
					text-decoration none
					i
						margin-right 10px
				&:hover
					background-color primary-color
					box-shadow 0 0.5rem 1rem rgba(0, 0, 0, .15)
					a
						color white !important
						
.navbar
	background-color: primary-color
	a
		color white !important
			
.page
	padding 16px 0px
	.breadcrumb
		background-color: #FFF
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, .10) !important
	.breadcrumb-item
		a
			&:hover
				text-decoration none !important
		&:before
			padding-top .5em
	.panel
		background-color: #fff
		border-radius 6px
		border-bottom 2px solid primary-color
		width 100% 
		.header
			h2.title 
				display inline-block
				color #19213d
				font-size 1.1em
				padding 12px 16px
		.inside
			padding 16px
			.nav
				.nav-link
					border 1px solid primary-color
					color primary-color
					margin-right 10px
					transition 0.5s
					&:hover
						background-color primary-color
						border 1px solid primary-color
						color #fff
.btn-primary
	background-color: primary-color
	border-color: primary-color
	transition 0.5s
	&:hover, &:focus
		background-color: primary-color-light
		border-color: primary-color-light
		
.input-group-text
	background-color: primary-color
	color: #fff

.custom-control.custom-checkbox
	-ms-transform scale(2) /* IE */
	-moz-transform scale(2) /* FF */
	-webkit-transform scale(2) /* Safari and Chrome */
	-o-transform scale(2) /* Opera */	
	transform scale(2)
	padding 10px
	
.slider-checkbox
	width 40px
	height 15px
	top 2.5px;
	background #333
	margin auto
	display inline-block
	position relative
	border-radius 50px
	box-shadow inset 0px 1px 1px rgba(0, 0, 0, 0.5), 0px 1px 0px rgba(255, 255, 255, 0.2)
	&:after 
		content ''
		position absolute
		top 7px
		left 7px
		height 1px
		width 26px
		background #111
		border-radius 50px
		box-shadow inset 0px 1px 1px rgba(0, 0, 0, 0.5), 0px 1px 0px rgba(255, 255, 255, 0.2)
	label 
		display block
		width 11px
		height 11px
		cursor pointer
		position absolute
		top 2px
		z-index 1
		left 2px
		background #fcfff4
		border-radius 50px
		-webkit-transition all 0.4s ease
		transition all 0.4s ease
		box-shadow 0px 2px 5px 0px rgba(0, 0, 0, 0.3)
		background -webkit-gradient(linear, left top, left bottom, from(#fcfff4), color-stop(40%, #dfe5d7), to(#b3bead))
		background linear-gradient(to bottom, #fcfff4 0%, #dfe5d7 40%, #b3bead 100%)
		&:after 
			content ''
			width 5px
			height 5px
			position absolute
			top 3px
			left 3px
			background #333
			border-radius 50px
			box-shadow inset 0px 1px 1px black, 0px 1px 0px rgba(255, 255, 255, 0.9)
	input[type=checkbox] 
		visibility hidden
	input[type=checkbox]:checked 
		& + label 
			left 27px
			&:after 
				background #27ae60
					
.was-validated .form-control
	&:valid, &:invalid
		background-image none
		padding-right inherit
