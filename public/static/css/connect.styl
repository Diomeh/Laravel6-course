body 
	margin 0px
	background-color #f6f6f6
	
.box
	background-color #fff
	border-radius 8px
	border 1px solid #d6d6d6
	position absolute
	padding 16px
	width 500px
	.btn-primary
		background-color: #780348
		border 0px
		width 100%
		transition 0.5s
	.btn-primary:hover
		background-color: #ce1d86
	.form-control
		&:focus
		&:active
			outline none
			box-shadow none
		
.box-login
	left calc(50% - 250px)
	top calc(50% - 121px)
	
.mtop16
	margin-top 16px